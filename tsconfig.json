{
    "compilerOptions": {
        "target": "ES2021",
        "module": "commonjs",
        "lib": ["es6"],
        "allowJs": true,
        "outDir": "build",
        "rootDir": "src",
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "baseUrl": "src",
        "paths": {
            "@/*": ["*"],
            "@user/*": ["./api/user/*"]
        }
    },
    "include": ["src"]
}
